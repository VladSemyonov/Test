{
  "include": ["./src/**/*", "app-config.js"],
  "compilerOptions": {
    "target": "es2015",
    "module": "es2020",
    "lib": ["dom", "es2018", "es5", "es6", "dom.iterable"],
    // "allowJs": true,
    // "checkJs": true,
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmit": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  }
}
